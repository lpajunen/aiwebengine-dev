{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "types": []
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.jsx", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
